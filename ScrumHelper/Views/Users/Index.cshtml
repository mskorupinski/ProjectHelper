@model IEnumerable<ScrumHelper.Models.User>


@{
    ViewBag.Title = "Lista użytkowników";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Użytkownicy </h2>

<div class="col-md-12" margin-top-20>
    <h2>Projekty</h2>
    <p>
        @Html.ActionLink("Nowy projekt", "NewProject", "ProjectPage", null, new { @class = "btn btn-primary" })
    </p>

    <table id="projects" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Email</th>
                <th>Dodaj</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Lastname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Mail)
                    </td>
                    <td>
                        <button onclick="location.href = '@(Url.Action("RemoveProject", "ProjectPage", new {UserID=item.Id}))'" class="btn btn-outline-success" style="width: 100%;  height: 30%">
                            <span class="glyphicon glyphicon-plus">

                            </span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="col-md-6" margin-top-20>

</div>
